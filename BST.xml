    <inputcommands>

        <!-- Prints a list of commands in game -->
        <cmd input="/gshelp">
            <addtochat color="4">$Buffer [Currently Supported Commands] $Buffer</addtochat>
            <addtochat color="4">Clear current sets: /clear</addtochat>
            <addtochat color="4">Equip Pet Defense Set: /pdt</addtochat>
            <addtochat color="4">Equip Your Defense Set: /dt</addtochat>
            <addtochat color="4">Ready Commands: /ready #</addtochat>
            <addtochat color="4">Information on pet moves: /petinfo</addtochat>
            <addtochat color="4">$Buffer [End of Supported Commands] $Buffer</addtochat>
        </cmd>

        <!-- Clears the current set -->
        <cmd input="/clear">
            <setvar name="Set" value="$DefaultSet"/>
            <addtochat color="4">$Buffer [Resetting Set!] $Buffer</addtochat>
        </cmd>

        <!-- Pet Defense Set (hehe instead of physical defense set) -->
        <cmd input="/pdt">
            <if advanced="$Set!=PDT">
                <setvar name="Set" value="PDT" />
                <addtochat color="4">$Buffer [Equipping Pet Defense Set!] $Buffer</addtochat>
            </if>
            <else>
                <setvar name="Set" value="$DefaultSet" />
                <addtochat color="4">$Buffer [UnEquipping Pet Defense Set!] $Buffer</addtochat>
            </else>
        </cmd>

        <!-- Player defense set -->
        <cmd input="/dt">
            <if advanced="$Set!=DT">
                <setvar name="Set" value="DT" />
                <addtochat color="4">$Buffer [Equipping Defense Set!] $Buffer</addtochat>
            </if>
            <else>
                <setvar name="Set" value="$DefaultSet" />
                <addtochat color="4">$Buffer [UnEquipping Defense Set!] $Buffer</addtochat>
            </else>
        </cmd>

        <!-- Custom Ready command that just simply prings out the recast for ready, could be done in macro, but this has worked better for me -->
        <cmd input="/ready">
            <if advanced="(%pet_active=false)">
                <addtochat color="4">$Buffer [You don't have a pet yet!] $Buffer</addtochat>
                <return />
            </if>

            <if advanced="(%pet_active=true)">
                <!-- Due to the min length on attack set best to have a delay here or else the ready set won't always equip in time -->
                <command delay="2000">/bstpet %arg1 &lt;me&gt;</command>
                <addtochat color="5">$Buffer [Current recast time on Ready Moves] $Buffer</addtochat>
                <command delay="500">/recast Ready</command>
            </if>

        </cmd>

        <!-- Prints out the Ready Attacks for your pet -->
        <cmd input="/petinfo">
            <if advanced="(%pet_active=false)">
                <addtochat color="4">$Buffer [You don't have a pet yet!] $Buffer</addtochat>
            </if>
            <else>
                <addtochat color="4">$Buffer Ready Moves for %pet_name $Buffer</addtochat>
                <command delay="500">/bstpet</command>
            </else>
        </cmd>
    </inputcommands>

    <idlegear>
        <if eq_rring="$Rings">
            <equip lock="true">
                <rring>%eq_ring2</rring>
            </equip>
        </if>
        <if eq_ring1="$Rings">
            <equip lock="true">
                <ring1>%eq_ring1</ring1>
            </equip>
        </if>

        <if eq_ammo="*Broth|*Greens|*Sap|*Soil|*Grease|Vermihumus|*Water|*Humus">
            <equip lock="true">
                <ammo>%eq_ammo</ammo>
            </equip>
        </if>

        <!-- If you want to equip mantle just before kill without having to keep it on all the time, just uncomment below (my bst alrdy mastered) -->
        <!-- <if advanced="(%t_hpp>0)&amp;(%t_hpp<5)">
			<equip lock="true">
				<back>Aptitude Mantle +1</back>
			</equip>
		</if> -->

        <!-- Other ways this can be handled, but this work just fine for me -->
        <if advanced="$DualWield=true">
            <equip>
                <main>Aymur</main>
                <sub augment="D32445013635340">Arktoi</sub>
            </equip>
        </if>
        <else>
            <equip>
                <main>Aymur</main>
            </equip>
        </else>

        <!-- My pet takes priority over me thats why its DT set is equipped first, usually on bst I run in ready command then run out -->
        <if advanced="(%pet_active=true)&amp;(%pet_hpp<60)">
            <equip set="PDT" />
        </if>
        <elseif advanced="%p_hpp<50">
            <equip set="DT" />
        </elseif>
        <elseif advanced="%p_status=engaged">
            <equip set="Hybrid" />
        </elseif>
        <else>
            <equip set="$Set"/>
        </else>

    </idlegear>

    <preranged>
