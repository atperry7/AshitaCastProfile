        <equip set="Weaponskill" />

        <!-- this overwites with gear for cloudsplitter and primal rend -->
        <if ad_name="Cloudsplitter|Primal Rend">
            <equip set="Cloudsplitter" />
        </if>

        <!-- then equips these items -->
        <equip>
            <neck>Fotia Gorget</neck>
            <waist>Fotia Belt</waist>
            <ring2>Mujin Band</ring2>
        </equip>
    </weaponskill>

    <petskill>
        <if ad_name="$PetPhys">
            <equip set="PetAttack" />
            <!-- Min length required to get any bonus from an attack set -->
            <gearlock length="2" />
        </if>
        <elseif ad_name="$PetMag">
            <!-- Dont have pet magic set yet so leaving this here for now -->
            <equip set="PetAttack" />
            <gearlock length="2" />
        </elseif>
    </petskill>
